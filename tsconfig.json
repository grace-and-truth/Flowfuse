import React from 'react';

// General React components
declare module '@components/*' {
  const Component: React.FC<any>;
  export default Component;
}

// Features
declare module '@features/*' {
  const Feature: React.FC<any>;
  export default Feature;
}

// Icons (wildcard for all SVG/React icons)
declare module '@components/icons/*' {
  const Icon: React.FC<React.SVGProps<SVGSVGElement>>;
  export default Icon;
}

// AppContext
declare module '@components/AppContext' {
  import React from 'react';
  const AppProvider: React.FC<any>;
  export { AppProvider };
}

// Your View type
declare module '@types' {
  export type View =
    | 'dashboard'
    | 'funnels'
    | 'contacts'
    | 'automations'
    | 'campaigns'
    | 'webhooks'
    | 'settings'
    | 'assets';
}
